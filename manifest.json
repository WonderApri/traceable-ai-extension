{
  "manifest_version": 3,
  "name": "TraceableAI: Deepfake Auditor",
  "version": "0.2",
  "permissions": ["sidePanel", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}